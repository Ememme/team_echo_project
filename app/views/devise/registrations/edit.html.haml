%h2= t('account')
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f|
  = devise_error_messages!
  .field.form-group
    = f.label :username, 'Full Name', class: "control-label col-md-4"
    .col-md-4
      = f.text_field :name, class: "form-control input-md"
  .field.form-group
    = f.label :nick, class: "control-label col-md-4"
    .col-md-4
      = f.text_field :nick, class: "form-control input-md"
  .field.form-group
    = f.label :email, class: "control-label col-md-4"
    .col-md-4
      = f.email_field :email, class: "form-control input-md"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p
      = t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email)
  .field.form-group
    = f.label :new_password, class: "control-label col-md-4"
    .col-md-4
      = f.password_field :password, autocomplete: "off", class: "form-control input-md", placeholder: t('.leave_blank_if_you_don_t_want_to_change_it')
  .field.form-group
    = f.label :password_confirmation, class: "control-label col-md-4"
    .col-md-4
      = f.password_field :password_confirmation, class: "form-control input-md"
  .field.form-group
    = f.label :current_password, class: "control-label col-md-4"
    .col-md-4
      = f.password_field :current_password, class: "form-control input-md", placeholder: t('.we_need_your_current_password_to_confirm_your_changes')
  %div= f.submit t('.update'), class: 'btn btn-info'
%h3= t('.cancel_my_account')
%p
  = t('.unhappy')
  %br/
  = link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-danger'
  \.
= link_to t('devise.shared.links.back'), :back
