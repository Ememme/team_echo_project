    <p>
    <%= form.label :content %>
    <%= form.text_field :content, id: :denounce_content %>
    </p>
    <p>
    <%= form.label :denounce_type %>
    <%= form.collection_select :denounce_type_id, @denounce_types, :id, :name %>
