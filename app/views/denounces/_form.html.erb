      <h2><%= pluralize(denounce.errors.count, "error") %> prohibited this denounce from being saved:</h2>

      <ul>
      <% denounce.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
    <%= form.label :denounced_user %>

